/**userInfo.wxss**/
@import "../common/lib/weui.wxss";

page{
  font-size: 14px;
}
.container {
  background-color: whitesmoke;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 25px;
}
.head{
  margin-top: 25px;
  margin-left: 20px;
}
.head-portrait{
  border-radius: 50px;
  width: 80px; 
  height: 80px;
}
.container-row {
  display: flex;
  flex-direction: row;
  margin-bottom: 10px;
  margin-top: 10px;
}
.container-col {
  display: flex;
  flex-direction: column;
  margin-bottom: 10px;
  margin-top: 10px;
}
.nickname {
  text-align: center;
  margin-top: 5px;
  font-weight: bold;
  font-size: 18px;
}
.line {
    width: 100%;
    height: 1px;
    background-color: gainsboro;
    margin-top: 1px;
}
.page-container{
  display: flex;
  flex-direction: column;
  margin-top: 10px;
}
.page-item{
  display: flex;
  flex-direction: row;
  background-color: whitesmoke;
  width: 100%;
  margin: 5px 0 5px 0;
  padding: 10px 0 10px 15px;
  border-radius: 50px;
}