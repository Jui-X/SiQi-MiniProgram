<view>

  <view class="header"> 
    <view class="container-row">

      <view class="container-col">
        <block class='info-items'>
          <image src="{{faceUrl}}" class="head-portrait"></image>
        </block> 
        <label class='nickname info-items'>{{nickname}}</label>
      </view>

      <view class="container-col">
        <view class="container-row">

          <view class="container-col">
            <view class="data-font">{{follow}}</view>
            <view class="text-font">我的关注</view>
          </view>

            <view class="container-col">
            <view class="data-font">{{fans}}</view>
            <view class="text-font">我的粉丝</view>
          </view>

            <view class="container-col">
            <view class="data-font">{{favor}}</view>
            <view class="text-font">我的获赞</view>
          </view>

        </view>

        <block>
          <button size='mini' class='primary userInfo-btn' bindtap='updateUserInfo'>编辑个人资料</button>
        </block>
      </view>
    </view>
  </view>

  <view class="page-container"> 
    <view class="page-item" style=" border-bottom: #EEE solid 1rpx;">
      <image src="../resource/images/icon_share.png" style="height:18px; width:18px;"></image>
      <view class="text-font" style="padding-left:20rpx;">我分享的内容</view>
    </view>
    <view class="page-item" style=" ">
      <image src="../resource/images/icon_favor.png" style="height:18px; width:18px;"></image>
      <view class="text-font" style="padding-left:20rpx;">我点赞的内容</view>
    </view>
    <view class="page-item">
      <image src="../resource/images/icon_purchase.png" style="height:18px; width:18px;"></image>
      <view class="text-font" style="padding-left:20rpx;">我购买的课程</view>
    </view>
  </view>

  <view class="setting">
    <view class="page-item">
      <image src="../resource/images/icon_setting.png" style="height:18px; width:18px;"></image>
      <view class="text-font" style="padding-left:20rpx;">设置</view>
    </view>
  </view>

</view>

