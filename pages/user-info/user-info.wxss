@import "../common/lib/weui.wxss";

.update-info {
  background-color: #66CCFF;
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  padding: 15rpx;
}
.update-btn {
  background-color: #66CCFF;
  display: flex;
  flex-direction: row;
  font-size: 24rpx;
  margin: 0;
  padding-top: 10rpx;
  border: #EEE solid 2rpx;
}
.container {
  background-color: whitesmoke;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx;
}
.container-col {
  display: flex;
  flex-direction: column;
  margin-bottom: 10rpx;
  margin-top: 10rpx;
}
.head{
  margin-top: 25px;
  margin-left: 20px;
}
.head-portrait{
  border-radius: 50px;
  width: 160rpx; 
  height: 160rpx;
}
.nickname {
  text-align: center;
  margin-top: 5px;
  font-weight: bold;
  font-size: 18px;
}
.user-info {
  display: flex;
  flex-direction: column;
  background-color: whitesmoke;
}
.user-item {
  display: flex;
  flex-direction: row;
  background-color: #fff;
  color: #888888;
  font-size: 36rpx;
  padding: 15rpx 25rpx;
  border: 2rpx solid #ccc;
}
