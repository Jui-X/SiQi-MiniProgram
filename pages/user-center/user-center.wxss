/**userInfo.wxss**/
@import "../common/lib/weui.wxss";
@import "../common/font.wxss";

page{
  font-size: 28rpx;
  background-color: whitesmoke;
}
.header {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 10px;
  background-color: #FFF;
}
.head-portrait{
  border-radius: 100rpx;
  width: 160rpx; 
  height: 160rpx;
}
.container-row {
  display: flex;
  flex-direction: row;
  margin: 10rpx 0;
}
.container-col {
  display: flex;
  flex-direction: column;
  margin: 15rpx;
}
.nickname {
  text-align: center;
  font-weight: bold;
  font-size: 36rpx;
  padding-top: 10rpx;
}
.userInfo-btn {
  width: 400rpx;
  background-color: #FFF;
  border-radius: 50rpx;
  border: #EEEEEE solid 1rpx;
}
.page-container{
  display: flex;
  flex-direction: column;
  margin-top: 35rpx;
  background-color: #FFF;
}
.page-item{
  display: flex;
  flex-direction: row;
  width: 100%;
  padding: 25rpx 35rpx;
  border-bottom: #EEE solid 1rpx;
}
.setting {
  display: flex;
  flex-direction: column;
  margin-top: 35rpx;
  background-color: #FFF;
}