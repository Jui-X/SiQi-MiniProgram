.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}

.swipe-1 {
  position: relative;
  align-items: center;
  justify-content: center;
  color: #000;
  font-size: 36rpx;
}

.swipe-1:before {
  content: '竞赛分类';
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

